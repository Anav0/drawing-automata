{
  "name": "automata-web",
  "version": "1.0.0",
  "description": "Automata drawing tools",
  "author": "Igor Motyka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anav0/drawing-automata"
  },
  "keywords": [
    "automata",
    "Kleen",
    "DFA",
    "NFA",
    "FSM",
    "regex",
    "Moore",
    "Hopcroft"
  ],
  "scripts": {
    "start": "run-s build:assets | run-s watch | run-s serve",
    "serve": "es-dev-server --app-index build/index.html --watch --node-resolve --root-dir \"build\" --open ./",
    "build": "run-s build:*",
    "build:assets": "copyfiles -u 1 \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif,svg}\" build | copyfiles \"node_modules/**\" build",
    "build:tsc": "tsc",
    "watch": "run-s watch:*",
    "watch:tsc": "tsc -w",
    "watch:assets": "onchange \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" -- run-s build:assets"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "copyfiles": "^2.2.0",
    "es-dev-server": "^1.56.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "lit-element": "^2.3.1"
  }
}
