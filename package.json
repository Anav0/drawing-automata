{
  "name": "automata-web",
  "version": "1.0.0",
  "description": "Automata drawing tools",
  "author": "Igor Motyka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anav0/drawing-automata"
  },
  "keywords": [
    "automata",
    "Kleen",
    "DFA",
    "NFA",
    "FSM",
    "regex",
    "Moore",
    "Hopcroft"
  ],
  "scripts": {
    "start": "run-s watch",
    "build": "run-s build:*",
    "serve": "browser-sync start -s \"build\" -f \"build\"",
    "build:assets": "copyfiles -u 1 \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" build",
    "build:scss": "node-sass --output-style compressed -r src -o build",
    "build:tsc": "tsc",
    "watch:tsc": "tsc -w",
    "watch:scss": "onchange \"src/**/*.scss\" -- run-s build:scss",
    "watch:assets": "onchange \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" -- run-s build:assets",
    "watch": "run-p serve watch:*"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "copyfiles": "^2.2.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "typescript": "^3.9.3"
  }
}
